<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:id="@+id/MainDrawer"
    >


    <TextView
        android:id="@+id/showTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="200dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="64dp"
        android:layout_marginBottom="550dp"
        android:text="TextView"
        android:textSize="20dp" />

    <fragment
        android:id="@+id/google_map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="0dp" />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/findWay"
            android:layout_width="101dp"
            android:layout_height="50dp"
            android:layout_marginStart="21dp"
            android:layout_marginTop="628dp"
            android:background="@drawable/button_click_bottom"
            android:text="경로시작"
            app:layout_constraintStart_toEndOf="@+id/startButton2"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/endButton2"
            android:layout_width="101dp"
            android:layout_height="50dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="628dp"
            android:background="@drawable/button_click_bottom"
            android:text="목적지 설정"
            android:textColor="#FFF0F8FF"
            app:layout_constraintStart_toEndOf="@+id/findWay"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/startButton2"
            android:layout_width="101dp"
            android:layout_height="50dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="628dp"
            android:background="@drawable/button_click_bottom"
            android:text="출발지 설정"
            android:textColor="#FFF0F8FF"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="630dp"
        android:background="@drawable/bg"
        android:clickable="true"
        app:navigationIcon="@android:drawable/ic_menu_sort_by_size">
    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/showText"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/toolbar"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="90dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="645dp"
        android:gravity="center_vertical"
        android:text="장소 및 위치 검색하기!"
        android:textSize="15dp" />

    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/naviagtion"
        app:headerLayout="@layout/navi_header"
        app:menu="@menu/navi_menu"
        android:layout_gravity="start"
        />

    <Button
        android:id="@+id/currentLocation"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="280dp"
        android:layout_marginTop="655dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/button_click_effect" />

    <!--    <FrameLayout-->
<!--        android:id="@+id/bottomLayout"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_marginTop="600dp">-->

<!--    </FrameLayout>-->


</androidx.drawerlayout.widget.DrawerLayout>